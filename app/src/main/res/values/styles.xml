<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Schedule_Details">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/salsa</item>
    </style>

    <style name="Schedule_Buttons">
        <item name="android:fontFamily">@font/permanent_marker</item>
        <item name="android:background">@drawable/button_schedule</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="CustomActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Add_Schedule_EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/dekko</item>
        <item name="android:textColor">@color/darker_white</item>
        <item name="android:textColorHint">@color/darker_white</item>
    </style>
    
    <style name="Add_Schedule_Label">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textColor">@color/sky_blue</item>
    </style>

    <style name="Add_schedule_Placeholder">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/palanquin_dark</item>
        <item name="android:textColor">@color/darker_white</item>
    </style>

    <style name="Add_Schedule_Button">
        <item name="android:background">@drawable/button_add_schedule</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/darker_white</item>
        <item name="android:fontFamily">@font/happy_monkey</item>
    </style>

</resources>
